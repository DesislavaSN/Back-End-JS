<h1>{{cube.name}}</h1>
<img class="cube" src="{{cube.imageUrl}}">
<div class="details">
  <p><span>Description:</span>{{cube.description}}</p>
  <p><span>Difficulty level:</span>{{cube.difficultyLevel}}</p>
  <a class="btn" href="/">Back</a>
  {{#if hasUser}}
    <a class="btn" href="/attach/accessory/{{cube._id}}">Attach</a>
    <a class="btn" href="/cube/{{cube._id}}/edit/">Edit</a>
    <a class="btn" href="/cube/{{cube._id}}/delete/">Delete</a>
  {{/if}}
</div>

<h2>Accessories</h2>
<div class="accessories">
  {{#if cube.accessories}}
  {{#each cube.accessories}}
    {{>accessoryCard}}
  {{/each}}
  {{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
  {{/if}}
</div>
