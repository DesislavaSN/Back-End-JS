<main>
    <!-- Details Page - Auction owner -->
    <section id="catalog-section">
        <h1 class="item">Fishing Boat
            <div class="f-right">
                <a class="action pad-small f-left" href="/auction/{{item._id}}/edit">Edit</a>
                <a class="action pad-small f-left" href="/auction/{{item._id}}/delete">Delete</a>
            </div>
        </h1>
        <div class="item padded">
            <div class="layout right large">

                <div class="col">
                    <img src="{{item.imageUrl}}" class="img-large">
                </div>

                <div class="content pad-med">
                    <p>In category: <strong>{{item.category}}</strong></p>
                    <p>{{item.description}}</p>

                    <div class="align-center">
                        <div>Current price: $<strong>{{item.price}}</strong></div>
                        <div>
                            {{#if item.bidder}}
                            <!-- If there is a bidder -->
                            <p>Bid by <strong>{{bidedUser.firstName}} {{bidedUser.lastName}}</strong></p>

                            <!-- # Bonus: If there is a bidder -->
                            {{!-- <a class="action pad-med cta" href="#">Close Auction</a>  --}}

                            {{else }}
                            <!-- If there are no bids -->
                            <p>No bids</p> 
                            {{/if}}
                        </div>
                    </div>

                </div>
            </div>
            <footer>Listed by {{user.firstName}}</footer>
        </div>
    </section>
</main>
