<main>
    <!-- Details Page -->
    <section id="catalog-section">

        <h1 class="item">{{item.title}}</h1>
        <div class="item padded">

            <div class="layout right large">

                <div class="col"><img src="{{item.imageUrl}}" class="img-large"></div>

                <div class="content pad-med">
                    <p>In category: <strong>{{item.category}}</strong></p>
                    <p>{{item.description}}</p>

                    <div class="align-center">
                        <div>Current price: $<strong>{{item.price}}</strong></div>
                        {{#if user}}
                        {{#if item.isBidder}}
                        <!-- If current user is the bidder -->
                        <div>You are currently the <strong>highest bidder</strong> for this auction</div>

                        {{else}}
                        <!-- If current user can place a bid -->
                        <form class="vertical" method="get" action="/auction/{{item._id}}/bid">
                            <label><span>Bid amount</span><input type="number" name="price"></label>
                            <input class="action" type="submit" value="Place bid">
                        </form>

                    </div>
                    {{/if}}
                    {{/if}}
                </div>
            </div>

            <footer>Listed by Peter Jackson</footer>
        </div>
    </section>
</main>