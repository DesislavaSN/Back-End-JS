
<section id="viewhotelDetails">
        <div class="profile"><img src="/static/img/profile.png" alt="default user">
            <h3>User Info:</h3>
            {{#with user}}
            <div class="flex">
                <p>Username: </p>
                <p>{{username}}</p>
            </div>
            <div class="flex">
                <p>Email: </p>
                <p>{{email}}</p>
            </div>
            <div class="flex">
                <p>Reservations: </p>
                <p>
                    {{#each bookings}}
                        <span>{{name}}, </span>
                    {{/each}}
                    
                </p>
            </div>
            {{/with}}
        </div>
</section>
