<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{pub.title}}</h2>
                <h3>Author: {{pubUsername}}</h3>
                <h3>Painting technique: {{pub.technique}}</h3>
                <h3>Certificate of authenticity: {{pub.certificate}}</h3>

                <!-- If there is no registered user, do not display buttons-->
                {{#if user}}
                <div class="buttons">
                    <!-- Only for registered user and author of the publication -->
                    {{#if pub.isOwner}}
                    <a href="/gallery/{{pub._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/gallery/{{pub._id}}/delete" class="btn-delete">Delete</a>
                    {{else}}
                    {{#if pub.isUser}}
                    <!-- logged in user who has already shared the publication-->
                    <p class="shared-pub">You already shared this publication</p>
                    {{else}}
                    <!-- logged in user who has not yet shared the publication-->
                    <a href="/gallery/{{pub._id}}/share" class="btn-share">Share publication</a>
                    {{/if}}
                    {{/if}}
                </div>
                {{/if}}

            </article>

            <article class="details-card-image">
                <img src="{{pub.imageUrl}}" alt="art-image2">
            </article>

        </article>
    </section>
</main>